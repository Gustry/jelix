{
    "name": "jelix/jelix",
    "type": "library",
    "description": "Jelix PHP framework",
    "keywords": ["framework"],
    "homepage": "http://jelix.org",
    "license": "LGPL-2.1-or-later",
    "authors": [
        {
            "name": "Laurent Jouanneau",
            "email": "laurent@jelix.org"
        },
        {
            "name": "Jelix Community",
            "homepage": "https://github.com/jelix/jelix/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=5.6",
        "jelix/fakeserverconf": "1.0.*",
        "jelix/composer-module-setup": "^0.5.0",
        "phpmailer/phpmailer": "^5.2.26",
        "jelix/castor": "1.0.*",
        "jelix/inifile": "^3.2.1",
        "jelix/simplelocalization": "1.7.1",
        "jelix/properties-file": "^1.0.0",
        "symfony/console":"^3.2.0",
        "jelix/file-utilities": "^1.8.3",
        "jelix/version": "1.0.*",
        "defuse/php-encryption": "^2.2.1",
        "paragonie/random_compat": "<9.99",
        "google/recaptcha": "^1.1.3"
    },
    "archive": {
        "exclude": [ "/build", "/temp", "/testapp", "Makefile"]
    },
    "autoload": {
        "psr-0": {
            "jelix\\": "lib/"
        },
        "psr-4": {
            "Jelix\\DevHelper\\": "lib/jelix-scripts/DevHelper/",
            "Jelix\\Routing\\UrlMapping\\": "lib/jelix/core/UrlMapping/",
            "Jelix\\Installer\\": "lib/jelix/installer/Installer/",
            "Jelix\\Scripts\\": "lib/jelix/Scripts/",
            "Jelix\\Core\\Infos\\": "lib/jelix/core/Infos/",
            "Jelix\\Dependencies\\" : "lib/jelix/Dependencies",
            "Jelix\\WebAssets\\" : "lib/jelix/WebAssets"
        },
        "classmap": [ ],
        "files": [ "lib/jelix/init.php" ]
    },
    "bin": ["bin/create-jelix-app"],
    "minimum-stability": "stable",
    "extra" : {
        "branch-alias": {
            "dev-master": "2.0-dev",
            "dev-jelix-1.7.x": "1.7-dev"
        },
        "jelix": {
            "modules-dir" : [
                "lib/jelix-modules",
                "lib/jelix-admin-modules"
            ],
            "plugins-dir" : [
                "lib/jelix-plugins"
            ]
        }
    }
}
